{
	"name": "my-app",
	"description": "my-description",
	"version": "0.0.0",
	"private": "true",
	"scripts": {
		"dev": "npm-run-all -p dev:ingestion dev:subscription dev:frontend",
		"dev:ingestion": "bun --watch src/ingestion.ts",
		"dev:subscription": "bun --watch src/subscription.ts",
		"dev:frontend": "cd consumer && npm run dev",
		"source": "tsx watch src/source.ts",
		"setup": "rm -rf node_modules && bun install && husky && cd consumer && rm -rf node_modules && npm i",
		"build": "tsup",
		"lint": "npx @biomejs/biome check --write"
	},
	"lint-staged": {
		"*.{ts,json}": [
			"npm run lint"
		]
	},
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/ramda": "^0.31.1",
		"@vitest/coverage-v8": "^2.1.2",
		"drizzle-kit": "^0.31.8",
		"husky": "^9.1.6",
		"ky": "^1.14.1",
		"lint-staged": "^15.2.10",
		"npm-run-all": "^4.1.5",
		"pkgroll": "^2.5.0",
		"random-float": "^3.0.0",
		"tsup": "^8.3.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^2.1.2"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.2",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"elysia": "^1.4.19",
		"idb-keyval": "^6.2.2",
		"ioredis": "^5.8.2",
		"ramda": "^0.32.0"
	}
}
